<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <!--Background -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background" />
    <EditText
        android:id="@+id/editText"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:hint="Android Is Here"
        android:text=""
        android:inputType="text"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/helicopter"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:lottie_rawRes="@raw/helicoptar"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/tree"
            android:layout_width="match_parent"
            android:layout_height="520dp"
            android:layout_marginTop="250dp"
            android:layout_gravity="top"
            android:scaleType="fitXY"
            app:lottie_rawRes="@raw/tree" />

        <!-- fire area -->
        <FrameLayout
            android:layout_marginTop="350dp"
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/fire1"
                android:layout_marginStart="80dp"
                android:layout_width="150dp"
                android:layout_height="127dp"
                app:lottie_rawRes="@raw/fire" />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/fire2"
                android:layout_marginTop="50dp"
                android:layout_marginStart="120dp"
                android:layout_width="150dp"
                android:layout_height="127dp"
                app:lottie_rawRes="@raw/fire" />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/fire3"
                android:layout_marginStart="160dp"
                android:layout_width="150dp"
                android:layout_height="127dp"
                app:lottie_rawRes="@raw/fire" />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/fire4"
                android:layout_marginStart="130dp"
                android:layout_width="150dp"
                android:layout_height="127dp"
                app:lottie_rawRes="@raw/fire" />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/fire5"
                android:layout_marginTop="100dp"
                android:layout_marginStart="130dp"
                android:layout_width="150dp"
                android:layout_height="127dp"
                app:lottie_rawRes="@raw/fire" />
        </FrameLayout>


    </FrameLayout>

    <!-- water -->
<FrameLayout
    android:id="@+id/waterArea"
    android:layout_width="50dp"
    android:layout_height="50dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="200dp"
    >
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/water"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:lottie_autoPlay="false"
        android:scaleType="fitXY"
        app:lottie_rawRes="@raw/water_1" />
</FrameLayout>


<View
    android:id="@+id/makeItGone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80FF8800"

    />

    <Button
        android:id="@+id/btn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/circle_button"
        android:gravity="center"
        android:text="PLAY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>